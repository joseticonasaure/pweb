#!"C:/xampp/perl/bin/perl.exe"

use strict;
use warnings;
use CGI;
use Text::CSV;

# Crear un nuevo objeto CGI
my $cgi = CGI->new;

# Obtener el parÃ¡metro del formulario (nombre de la entidad)
my $nombre_entidad = $cgi->param('nombre_entidad');

my $csv_file = 'universidades.csv';

open my $csv_fh, '<', $csv_file or die "No se pudo abrir el archivo CSV: $!";

my $csv = Text::CSV->new({ binary => 1, auto_diag => 1 });

while (my $row = $csv->getline($csv_fh)) {
    if ($row->[1] =~ /$nombre_entidad/i) {
        print join('|', @$row) . "\n";
    }
}

close $csv_fh;
